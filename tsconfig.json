{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
    ,
    "paths": {
      "@core/*": ["src/app/core/*"], // direccion exacta donde encontrara ese modulo(tiene que ir al src buscar los archivos del core y llamar cualquier cosa que este ahi)
      "@material/*" : ["src/app/material/*"],
      "@shared/*" : ["src/app/shared/*"],
      "@admin/*" : ["src/app/admin/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
